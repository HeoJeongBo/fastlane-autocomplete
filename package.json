{
  "name": "fastlane-autocomplete",
  "displayName": "Fastlane Autocomplete",
  "description": "Fastfile 작성을 위한 자동완성 및 신택스 하이라이팅 확장",
  "version": "0.1.1",
  "publisher": "heojeongbo",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "fastlane",
    "fastfile",
    "autocomplete",
    "syntax highlighting",
    "ios",
    "android"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:fastfile"
  ],
  "contributes": {
    "languages": [
      {
        "id": "fastfile",
        "aliases": [
          "Fastfile",
          "fastfile"
        ],
        "extensions": [
          ".Fastfile"
        ],
        "filenames": [
          "Fastfile"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fastfile",
        "scopeName": "source.fastfile",
        "path": "./syntaxes/fastfile.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "bun run compile",
    "dev": "bun run watch",
    "prepare": "husky",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "release": "release-it",
    "release:dry": "release-it --dry-run"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@release-it/conventional-changelog": "10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "husky": "9.1.7",
    "release-it": "19.0.4",
    "typescript": "^4.9.4"
  }
}
